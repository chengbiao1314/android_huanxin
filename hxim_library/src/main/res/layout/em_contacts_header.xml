<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="ResAuto">


    <com.cb.hxim_library.widget.ContactItemView
        app:contactItemImage="@drawable/em_new_friends_icon"
        app:contactItemName="@string/Application_and_notify"
        android:id="@+id/application_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.cb.hxim_library.widget.ContactItemView
        app:contactItemImage="@drawable/em_groups_icon"
        app:contactItemName="@string/group_chat"
        android:id="@+id/group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.cb.hxim_library.widget.ContactItemView
        app:contactItemImage="@drawable/em_groups_icon"
        app:contactItemName="@string/chat_room"
        android:id="@+id/chat_room_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.cb.hxim_library.widget.ContactItemView
        app:contactItemImage="@drawable/em_groups_icon"
        app:contactItemName="@string/robot_chat"
        android:id="@+id/robot_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>